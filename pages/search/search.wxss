page {
  background: #f2f2f2;
}
.top {
  display: flex;
  padding: 40rpx;
  justify-content: center;
  align-items: center;
  background: #ffe400;
}
.search {
  width: 400rpx;
  padding: 4rpx 40rpx;
  background: white;
  border-radius: 32rpx;
}
.searchbtn {
  margin-left: 40rpx;
  padding: 10rpx 40rpx;
  background: #ffe400;
  border-radius: 32rpx;
}
.result {
  text-align: center;
  padding: 20rpx 0;
}
.menuList>view {
  padding: 40rpx 0;
  text-align: center;
  overflow: hidden;
  border-bottom: 2rpx solid #ddd;
}
.menuList2 {
  background: white;
  padding: 30rpx 40rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #ddd;
}
.menuList2>.P_message {
  text-align: left;
  margin-left: 40rpx;
  padding: 0;
  border: 0;
}
.menuList>image {
  width: 160rpx;
  height: 160rpx;
}
.menuList2>view {
  line-height: 44rpx;
}
.P_small {
  color: #999;
  font-size: 28rpx;
}
.line_t {
  text-decoration: line-through;
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}
.P_bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}